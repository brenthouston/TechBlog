<div class="headextend">
    <div class="box">
        <h1>The techBlog</h1>
    </div>
    <div class="box2"></div>
</div>


<div class="container">
    <h3 class="phead">{{hbsData.name}} by {{hbsData.user.name}}</h3>
    <p>{{hbsData.description}}</p>
</div>

<div id="comment" >
    <form action="" method="POST">
        <label for="textbox">Add Comment:</label>
        <textarea id="myTextarea" name="myTextarea" rows="4" cols="50" placeholder="Enter your text..."></textarea>

        <button type="submit" id="btn" value={{hbsData.id}}>Submit</button>
    </form>
</div>
{{#each hbsData.Comments}}
<p>{{body}}</p>
{{/each}}
<script src="/singlePost.js"></script>



